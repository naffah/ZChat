<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="app.naffah.zchat">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>

    <application
        android:name=".LaunchScreen.ScreenSpeed"
        android:allowBackup="true"
        android:icon="@mipmap/icon_dbz"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_dbz"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LaunchScreen.SplashActivity"
            android:clearTaskOnLaunch="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".PhoneAuth.PhoneAuthActivity"/>
        <activity android:name=".Activities.TabView">
        </activity>
        <activity android:name=".PhoneAuth.PhoneAuthToTabView">
        </activity>
    </application>

</manifest>